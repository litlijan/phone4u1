  <script>
    function validateForm() {
      var username = document.getElementById('name').value.trim();
      var email = document.getElementById('email').value.trim();
      var password = document.getElementById('password').value.trim();
      var confirmPassword = document.getElementById('confirmPassword').value.trim();

      document.getElementById('usernameError').innerText = "";
      document.getElementById('emailError').innerText = "";
      document.getElementById('passwordValidationMessage').innerText = "";
      document.getElementById('confirmPasswordValidationMessage').innerText = "";

      var hasErrors = false;

      if (username === "") {
        document.getElementById('usernameError').innerText = "Username must be filled out";
        hasErrors = true;
      }

      if (email === "") {
        document.getElementById('emailError').innerText = "Email must be filled out";
        hasErrors = true;
      } else if (!/.+@.+\..+/.test(email)) {
        document.getElementById('emailError').innerText = "Invalid email address";
        hasErrors = true;
      }

      if (password === "") {
        document.getElementById('passwordValidationMessage').innerText = "Password must be filled out";
        hasErrors = true;
      } else if (password.length < 8 || !/\d/.test(password)) {
        document.getElementById('passwordValidationMessage').innerText = "Password must be at least 8 characters long and contain at least one numeric digit";
        hasErrors = true;
      }

      if (confirmPassword === "") {
        document.getElementById('confirmPasswordValidationMessage').innerText = "Please confirm your password";
        hasErrors = true;
      } else if (confirmPassword !== password) {
        document.getElementById('confirmPasswordValidationMessage').innerText = "Passwords do not match";
        hasErrors = true;
      }

      if (hasErrors) {
        return false;
      }

      return true;
    }
  </script>

