<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Product Template</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
  <style>
    /* Custom styles */
    /* Add your custom styles here */
  </style>
</head>
<body>

  <%-include('./partials/admin-sidenav') %>

  <header>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container">
        <a class="navbar-brand" href="#">Add Product</a>
      </div>
    </nav>
  </header>

  <main class="py-4">
    <div class="container">
      <h2 class="mb-4">Add New Product</h2>
      <form action="/admin/addproduct" enctype="multipart/form-data" method="post">
       
        <div class="mb-3">
          <label for="productName" class="form-label">Product Name</label>
          <input type="text" class="form-control" id="productName" placeholder="Enter product name" name="name" required>
        </div>
        <div class="mb-3">
          <label for="productDescription" class="form-label">Product Description</label>
          <textarea class="form-control" id="productDescription" rows="3" placeholder="Enter product description" name="description" required></textarea>
        </div>
        <div class="mb-3">
          <label for="productImage" class="form-label">Tags</label>
          <input type="text" class="form-control" id="Tags" placeholder="Tags Description" name="tags" required>
        </div> 
        <div class="mb-3">
          <label for="productPrice" class="form-label">Product price</label>
          <input type="number" class="form-control" id="Product price" placeholder="Product price" name="price" min="0"  required>
        </div>
        <div class="mb-3">
          <label for="productPrice" class="form-label">Discount price</label>
          <input type="number" class="form-control" id="Discount price" placeholder="Discount price" name="discount" min="0" required>
        </div>
        <div class="mb-3">
          <label for="productImage" class="col-form-label">Category</label>
          <select class="form-control" id="productImage" name="category" required>
              <option value="" selected disabled>Select a category</option>
              <% categoryData.filter(category => category.status === true).forEach(category => { %>
                  <option value="<%= category.name %>">
                      <%= category.name %>
                  </option>
              <% }); %>
          </select>
      </div>
      
      
        <div class="mb-3">
          <label for="brand" class="py-1">Brand</label>
          <select name="brand" class="form-control">
              <option selected disabled>Select a Brand</option>
              <% brands.forEach(brand => { %>
                  <option value="<%= brand.name %>"><%= brand.name %> </option>                                
              <% }) %>
          </select>
        </div>
        <div class="mb-3">
          <label for="productImage" class="form-label">Product Stock</label>
          <input type="number" class="form-control" placeholder="Product Stock" min="0"   name="stock" required>
        </div>

                          <div class="form-group py-2">
                            <label for="img1" class="py-1">Image 1</label>
                            <input type="file" placeholder="image 1" class="form-control" name="image1" required>
                        </div>
                        <div class="form-group py-2">
                            <label for="img2" class="py-1">image 2</label>
                            <input type="file" placeholder="image 2" class="form-control" name="image2" required>
                        </div>
                        <div class="form-group py-2">
                            <label for="img3" class="py-1">image 3</label>
                            <input type="file" placeholder="image 3" class="form-control" name="image3" required>
                        </div>
                        <div class="form-group py-2">
                            <label for="img4" class="py-1">image 4</label>
                            <input type="file" placeholder="image 4" class="form-control" name="image4" required>
                        </div>
      
                        <button type="submit" class="btn btn-primary">Add Product</button>
      </form>
    </div>
  </main>



  <!-- Bootstrap Bundle with Popper -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
  <!-- Add any custom scripts here -->
</body>
</html>