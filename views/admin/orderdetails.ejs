<!doctype html>
<html lang="en">
    <head>
        <title>Title</title>
        <!-- Required meta tags -->
        <meta charset="utf-8" />
        <meta
            name="viewport"
            content="width=device-width, initial-scale=1, shrink-to-fit=no"
        />

        <!-- Bootstrap CSS v5.2.1 -->
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
            crossorigin="anonymous"
        />
    </head>

    <body>

        <div class="details">
            <div class="recentOrders">
                <div class="cardHeader">
                    <h1>Order List</h1>
                    <a href="/admin/orders" class="btn btn-back">Back</a>
                </div>
        
                <div class="card shadow">
                    <div class="customer-info">
                        <h2>Customer Information</h2>
                        <h3><%= customerName %></h3>
                        <p><%= customerAddress.AddressLane %><br><%= customerAddress.City %>, <%= customerAddress.State %>, <%= customerAddress.Pincode %></p>
                    </div>
        
                    <div class="order-details">
                        <h2>Ordered Products</h2>
                        <% OrderedProducts.forEach((product) => { %>
                        <div class="product-card">
                            <div class="product-image">
                                <img src="/uploads/<%= product?.ProductId.images[0] %>" alt="Product Image">
                            </div>
                            <div class="product-info">
                                <h4 class="product-name"><%= product.ProductId.name %></h4>
                                <p class="product-quantity">Quantity: <%= product.Quantity %></p>
                            </div>
                        </div>
                        <% }); %>
                    </div>
                </div>
            </div>
        </div>
        
<style>
/* Styles for the cardHeader */
.cardHeader {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 20px;
    background-color: #6c5ce7; /* Purple */
    color: white;
}

.cardHeader h1 {
    font-size: 24px;
    margin: 0;
}

.btn {
    padding: 10px 20px;
    background-color: #fdcb6e; /* Yellow */
    color: white;
    text-decoration: none;
    border-radius: 5px;
    transition: background-color 0.3s;
}

.btn:hover {
    background-color: #f0932b; /* Darker Yellow */
}

.btn-back {
    background-color: #e74c3c; /* Red */
}

/* Styles for the customer-info */
.customer-info {
    padding: 20px;
    border-bottom: 1px solid #dfe7ef;
}

.customer-info h2 {
    font-size: 20px;
    margin-bottom: 10px;
    color: #2d3436; /* Black */
}

.customer-info h3 {
    font-size: 18px;
    margin-bottom: 5px;
    color: #2d3436; /* Black */
}

.customer-info p {
    font-size: 16px;
    margin: 0;
    color: #576574; /* Dark Gray */
}

/* Styles for the order-details */
.order-details {
    padding: 20px;
}

.order-details h2 {
    font-size: 20px;
    margin-bottom: 10px;
    color: #2d3436; /* Black */
}

/* Styles for the product-card */
.product-card {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
    border: 1px solid #dfe7ef;
    border-radius: 5px;
    overflow: hidden;
    background-color: #f5f6fa; /* Light Gray */
}

.product-image img {
    width: 50%;
    height: 80%;
    object-fit: cover;
    border-radius: 5px;
}

.product-info {
    flex: 1;
    padding: 10px;
}

.product-name {
    font-size: 18px;
    margin: 0;
    color: #2d3436; /* Black */
}

.product-quantity {
    font-size: 16px;
    margin: 0;
    color: #576574; /* Dark Gray */
}


</style>        
        


        <script
            src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
            integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
            crossorigin="anonymous"
        ></script>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.min.js"
            integrity="sha384-BBtl+eGJRgqQAUMxJ7pMwbEyER4l1g+O15P+16Ep7Q9Q+zqX6gSbd85u4mG4QzX+"
            crossorigin="anonymous"
        ></script>
    </body>
</html>
